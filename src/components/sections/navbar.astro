---
import { Astronav, MenuItems, MenuIcon } from 'astro-navbar'
import LOGO from '@assets/LOGO.png'
import { Picture } from 'astro:assets'

const menuitems = [
  {
    title: 'Trabajo',
    path: '#work',
  },
  {
    title: 'Stack',
    path: '#stack',
  },
  {
    title: 'Proyectos',
    path: '#projects',
  },
  {
    title: 'Formaci√≥n',
    path: '#studies',
  },
  {
    title: 'Sobre mi',
    path: '#about-me',
  },
  {
    title: 'Contacto',
    path: '#contact',
  },
]
---

<!-- TODO AL HACER CLICK DEBE CERRAR EL MENU EN MOBILE -->
<header
  class='h-[70px] container flex flex-col lg:flex-row justify-between items-center px-5 py-1 w-full sticky top-0 bg-custom-bg z-50 border-b mx-auto'
>
  <Astronav>
    <div class='flex w-full lg:w-auto items-center justify-between'>
      <a href='#start' class='text-lg'>
        <Picture
          src={LOGO}
          alt='Santino Stimoli retrato'
          widths={[200, 400, 600]}
          sizes='(max-width: 800px) 100vw, 620px'
          loading='eager'
          format='avif'
          class='m-3 w-40'
        />
      </a>
      <div class='block lg:hidden'>
        <MenuIcon class='w-4 h-4' />
      </div>
    </div>
    <MenuItems class='hidden w-full lg:w-auto mt-2 lg:flex lg:mt-0'>
      <ul class='flex flex-col lg:flex-row lg:gap-3'>
        {
          menuitems.map((item, index) => (
            <>
              <hr class='opacity-20' />
              <li>
                <a
                  href={item.path}
                  class='flex lg:px-3 py-2 items-center hover:text-custom-decoration hover:bg-white/10 lg:rounded transition-all max-lg:pl-3'
                >
                  <span> {item.title}</span>
                </a>
              </li>
            </>
          ))
        }
      </ul>
    </MenuItems>
  </Astronav>
</header>
