---
import TechClipSection from './TechClipSection.astro'

interface Props {
  experience: Experience
}
---

<div class='px-5 mx-auto flex flex-wrap'>
  <div class='flex relative py-10 sm:items-center md:w-2/3 mx-auto'>
    <div class='h-full w-6 absolute inset-0 flex items-center justify-center'>
      <div class='h-full w-1 bg-gray-200 pointer-events-none'></div>
    </div>
    <div
      class='flex-shrink-0 w-6 h-6 rounded-full mt-10 sm:mt-0 inline-flex items-center justify-center bg-custom-decoration relative z-10 title-font font-medium text-sm'
    >
    </div>
    <div class='flex-grow md:pl-8 pl-6 flex sm:items-center items-start flex-col sm:flex-row'>
      <div class='flex-grow sm:pl-6 mt-6 sm:mt-0'>
        <h2 class='mb-1 text-3xl text-custom-decoration uppercase font-black'>{Astro.props.experience.title}</h2>
        <div class='flex items-center justify-between w-full -mt-1 mb-3'>
          <h3 class=''>{Astro.props.experience.company}</h3>
          <span>{Astro.props.experience.range}</span>
        </div>
        <p class='leading-relaxed'>
          {Astro.props.experience.description}
        </p>
        <TechClipSection style='mt-3' technologies={Astro.props.experience.technologies} />
      </div>
    </div>
  </div>
</div>
