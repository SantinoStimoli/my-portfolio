---
import ContactLink from '@components/ContactLink.astro'
import { contactWays } from '@content/profile'

interface Props {
  title?: boolean
}
---

<div
  class='[&_a]:h-9 [&_a]:w-9 [&_a:hover]:text-secondary [&_a]:transition-all flex gap-5 max-lg:justify-center flex-wrap items-center'
>
  <div class='flex items-center gap-3 flex-wrap justify-center'>
    {Astro.props.title && <h3 class='text-2xl font-black uppercase'>Contacto:</h3>}
    <div class='flex flex-nowrap gap-3 pb-1'>
      {contactWays.map((contactWay) => <ContactLink link={contactWay.link} icon={contactWay.icon} />)}
    </div>
  </div>
</div>
